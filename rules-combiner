#!/usr/bin/env python3
"""
Simple wrapper script for the Rules Combiner CLI.
This makes it easier to run the CLI without remembering the full module path.
"""

import sys
import subprocess
from pathlib import Path

def main():
    """Run the rules combiner CLI."""
    # Get the directory where this script is located
    script_dir = Path(__file__).parent
    
    # Set up the Python path and import
    sys.path.insert(0, str(script_dir / 'src'))
    
    try:
        from rules_combiner.cli import main as cli_main
        # Set a clean program name
        sys.argv[0] = "rules-combiner"
        cli_main()
    except KeyboardInterrupt:
        print("\nOperation cancelled by user.")
        sys.exit(130)
    except ImportError as e:
        print(f"Error importing CLI module: {e}")
        print("Make sure you have installed the dependencies with 'uv sync --dev'")
        sys.exit(1)

if __name__ == "__main__":
    main()
